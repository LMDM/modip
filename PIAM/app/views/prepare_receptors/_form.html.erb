<%= form_for(@prepare_receptor, :url => url, :method => verb) do |f| %>
  <% if @prepare_receptor.errors.any? %>
	  <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <h5>Error!</h5>
		<p><%= pluralize(@prepare_receptor.errors.count, "error") %> prohibited this prepare_receptor from being saved:</p>
		<ul>
			<% @prepare_receptor.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
      </div>
  <% end %>
  <%= hidden_field_tag "prepare_receptor[target_id]", @prepare_receptor.target_id %>
  <div class="actions">
    <div class="row-fluid">
      <div class="span8">
		<div class="control-group">
          <div class="control-label">
            <%= f.label "upload receptor" %>
          </div>
          <div class="controls">
            <%= f.file_field(:uploaded_receptor, :accept => '.pdbqt')%>
          </div>
        </div>
      </div>
      <div class="span4">
      <div class="control-group">
          <div class="control-label">
            <%= f.label "select receptor type" %>
          </div>
          <div class="controls">
           <%= collection_select(:prepare_receptor, :receptor_type_id, ReceptorType.all, :id, :name) %>
          </div>
        </div>      
      </div>
    </div>
    <div class="row-fluid">
		<table class="definition table">
			<thead>
				<tr>
					<th> Coordinate Params </th>
					<th>X</th>
					<th>Y</th>
					<th>Z</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td> Center Grid </td>
					<td> <%= f.text_field :center_x, :size => 5%></td>
					<td> <%= f.text_field :center_y, :size => 5%></td>
					<td> <%= f.text_field :center_z, :size => 5%></td>
				</tr>
				<tr>
					<td> Size Grid</td>
					<td> <%= f.text_field :size_x, :size => 5%></td>
					<td> <%= f.text_field :size_y, :size => 5%></td>
					<td> <%= f.text_field :size_z, :size => 5%></td>
				</tr>
			</tbody>
		</table>
    </div>
    <div class="row-fluid">
      <div class="control-group span4">
        <div class="control-label">
          <%= f.label :energy_range %>
        </div>
        <div class="controls">
          <%= f.text_field :energy_range %>
        </div>
      </div>
      <div class="control-group span4">
        <div class="control-label">
          <%= f.label :number_of_conformer %>
        </div>
        <div class="controls">
          <%= f.text_field :number_of_conformer %>
        </div>
      </div>
      <div class="control-group span4">
        <div class="control-label">
          <%= f.label "number_of_cpu's" %>
        </div>
        <div class="controls">
          <%= f.text_field :cpu_number %>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <div class="control-group">
        <div class="control-label">
          <%= f.label :comment %>
        </div>
        <div class="controls">
          <%= f.text_area :comment, :cols => 40, :rows => 3, :style => "width:500px" %>
        </div>
      </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="control-group">
        <div class="span11 controls">
          <%= f.submit :class => 'btn'%>
        </div>
      </div>
    </div>
  </div>
<% end %>
