<div class="piam_form" >
  <% if notice%>
    <h2 class="text-center">Error occurred attempts login user</h2>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <%= notice %>
      </div>
  <% end %>
  <%= form_tag '/login', :method => :post, :class => "form-horizontal" do %>
      <fieldset>
      <legend><%= notice %></legend>
       <div style="display: block; width: 50%; margin: 20px auto 20px auto; padding: 10px 0;">

        <div class="control-group">
          <label class="control-label" for="name" >User Name:</label>
          <div class="controls">
            <%= text_field_tag :name, params[:name] , :placeholder => "UserName"%>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="password" >Password:</label>
          <div class="controls">
            <%= password_field_tag :password, params[:password], :placeholder => "Password" %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= submit_tag "Login", :class => 'btn' %>
          </div>
        </div>
       </div>
      </fieldset>
  <% end %>
</div>
